type: install
name: MongoDB Database Replication
logo: images/mongodb-70x70.png

baseUrl: https://raw.githubusercontent.com/dzotic9/mongo-replic/master/

nodes:
  - nodeType: mongodb
    displayName: replSet
    count: 2
    cloudlets: 8
    env:
      ON_ENV_INSTALL: 
        jps: ${baseUrl}add-ons/scaling.jps?_r=${fn.random}
        settings:
          REPL_SET_NAME: ${globals.REPL_SET_NAME}

startPage: ${nodes.nosqldb[0].url}
